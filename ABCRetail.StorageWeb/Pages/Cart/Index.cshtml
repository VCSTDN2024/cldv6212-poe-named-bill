@page
@model ABCRetail.StorageWeb.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "My Cart";
}

<div class="row">
    <div class="col-lg-7">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <strong>Available Products</strong>
            </div>
            <div class="card-body">
                @if (!Model.Products.Any())
                {
                    <p class="text-muted">No products found. Populate the products table first.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                    <th style="width: 220px;">Add</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>@product.Name</td>
                                    <td>R @product.Price</td>
                                    <td>@product.StockQuantity</td>
                                    <td>
                                        <form method="post" asp-page-handler="Add" class="row g-2">
                                            <input type="hidden" name="partitionKey" value="@product.PartitionKey" />
                                            <input type="hidden" name="rowKey" value="@product.RowKey" />
                                            <div class="col-6">
                                                <input asp-for="Quantity" class="form-control form-control-sm" value="1" />
                                            </div>
                                            <div class="col-6">
                                                <button type="submit" class="btn btn-sm btn-primary w-100">Add</button>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-dark text-white">
                <strong>Your Cart</strong>
            </div>
            <div class="card-body">
                @if (TempData["StatusMessage"] is string message)
                {
                    <div class="alert alert-info">@message</div>
                }

                @if (!Model.Items.Any())
                {
                    <p class="text-muted">Add items to start building your order.</p>
                }
                else
                {
                    <ul class="list-group mb-3">
                        @foreach (var item in Model.Items)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@item.ProductName</strong>
                                    <div class="text-muted small">@item.Quantity Ã— R @item.UnitPrice</div>
                                </div>
                                <form method="post" asp-page-handler="Remove">
                                    <input type="hidden" name="itemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Remove</button>
                                </form>
                            </li>
                        }
                    </ul>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="fw-bold">Total:</span>
                        <span class="fs-5">R @Model.CartTotal</span>
                    </div>
                    <form method="post" asp-page-handler="Checkout">
                        <button type="submit" class="btn btn-success w-100">Place Order</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
